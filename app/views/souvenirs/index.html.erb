      <%= button_to "削除する", souvenir_path(t.id), method: :delete %>
    </div>
  <% end %>
</div>

<h2>gmap</h2>
<div id='map'></div>

<style>
  #map {
    height: 600px;
    width: 100%;
  }
</style>

<!-- js部分 -->
<script>
  function initMap() {
    // 初期表示位置を日本全体の中央に変更
    let latlng = new google.maps.LatLng(36.2048, 138.2529);
    let styles = [
      {
        stylers: [
          { "saturation": 0 },
          { "lightness": 0 }
        ]
      }
    ];

    let map = new google.maps.Map(document.getElementById('map'), {
      zoom: 5.6,
      styles: styles,
      center: latlng
    });
    let transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    <% @souvenirs.each do |souvenir| %>
      (function() {
        let markerLatLng = { lat: <%= souvenir.lat %>, lng: <%= souvenir.lng %> };
        let marker = new google.maps.Marker({
          position: markerLatLng,
          map: map
        });

        let infowindow = new google.maps.InfoWindow({
          position: markerLatLng,
          content: "<a href='<%= souvenir_url(souvenir.id) %>' target='_blank'><img src='<%= souvenir.image.url %>' alt='<%= souvenir.name %>'></a>"
        });

        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      })();
    <% end %>
  }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['8ID4gCPc1LwLEOBXv-Ny7AIzaSyBkxCV4XGBt1l'] %>&callback=initMap" async defer></script>
