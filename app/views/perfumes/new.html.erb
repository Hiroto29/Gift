<%= form_for(@perfume, class: 'form-horizontal', role: 'form') do |f| %>
    <div class="perfume-container">
        <div class="col-12">
            <h2>Q1. カテゴリ</h2>
        </div>
        <div class="col-6">
            <%= f.radio_button :question1, "1", id: "custom_id1" %>
            <label for="custom_id1">文化</label>
            <%= f.radio_button :question1, "2", id: "custom_id2" %>
            <label for="custom_id2">自然</label>
            <%= f.radio_button :question1, "3", id: "custom_id3" %>
            <label for="custom_id3">食品</label>
            <%= f.radio_button :question1, "4", id: "custom_id4" %>
            <label for="custom_id4">芸術</label>
        </div>
        <div class="col-12">
            <h2>Q2. 目的</h2>
        </div> 
        <div class="col-6">
            <%= f.radio_button :question2, "1", id: "custom_id5" %>
            <label for="custom_id5">記念品</label>
            <%= f.radio_button :question2, "2", id: "custom_id6" %>
            <label for="custom_id6">実用品</label>
            <%= f.radio_button :question2, "3", id: "custom_id7" %>
            <label for="custom_id7">装飾品</label>
            <%= f.radio_button :question2, "4", id: "custom_id8" %>
            <label for="custom_id8">コレクション</label>
        </div>   
        <div class="col-12">
            <h2>Q3. 価格帯</h2>
        </div>
        <div class="col-6">
            <%= f.radio_button :question3, "1", id: "custom_id9" %>
            <label for="custom_id9">低価格</label>
            <%= f.radio_button :question3, "2", id: "custom_id10" %>
            <label for="custom_id10">中価格</label>
            <%= f.radio_button :question3, "3", id: "custom_id11" %>
            <label for="custom_id11">高価格</label>
        </div>
    
        <div class="col-12">
            <h2>Q4. 対象</h2>
        </div>
        <div class="col-6">
            <%= f.radio_button :question4, "1", id: "custom_id12" %>
            <label for="custom_id12">子供</label>
            <%= f.radio_button :question4, "2", id: "custom_id13" %>
            <label for="custom_id13">大人</label>
            <%= f.radio_button :question4, "3", id: "custom_id14" %>
            <label for="custom_id14">家族</label>
            <%= f.radio_button :question4, "4", id: "custom_id15" %>
            <label for="custom_id15">職場</label>
        </div>
    </div>
    <div class="diagnosis-button">
        <%= f.submit "結果を見る" %>
    </div>
<% end %>